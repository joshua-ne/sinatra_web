<h1>Editing Student Information</h1>
<% if @message %>
<div class="alert alert-info">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <%= @message %>
</div>
<% end %>
<p></p>
<p></p>

<form action="/students/<%= @student.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="put">

    <div class="form-group">
        <label>Student ID</label>
        <input type="text" size="70" name="student_id" value="<%= @student.student_id %>">
        <p></p>
        <label>First Name</label>
        <input type="text" size="70" name="firstname" value="<%= @student.firstname %>">
        <p></p>
        <label>Last Name</label>
        <input type="text" size="70" name="lastname" value="<%= @student.lastname %>">
        <p></p>
        <label>Birthday</label>
        <input type="date" size="70" name="birthday" value="<%= @student.birthday %>">
        <p></p>
        <label>Address</label>
        <input type="text" size="70" name="address" value="<%= @student.address %>">
        <p></p>

        <label>major</label>
        <input type="text" size="70" name="major" value="<%= @student.major %>">
        <p></p>

        <label>personality</label>
        <input type="text" size="70" name="personality" value="<%= @student.personality %>">
        <p></p>

        <label>notes</label>
        <textarea type="text" rows="5" cols="70" name="notes"><%= @student.notes %></textarea>
        <p></p>
    </div>



    <button type="submit" class="btn btn-primary">Update Student Information</button>
</form>
